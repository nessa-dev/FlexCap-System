@{
    ViewData["Title"] = "Colaboradores da Equipe";
    Layout = "~/Views/Shared/Template.cshtml";
}

@model List<FlexCap.Web.Models.Colaborador>


    <div class="container py-4" style="max-width: 700px; margin-left: 0;">
    <h2 class="fw-bold mb-2">Colaboradores</h2>
    <p class="text-muted">@Model.Count members</p>

    <div class="row g-3">
        @if (Model != null)
        {
            @foreach (var colaborador in Model)
            {
                var statusColorClass = colaborador.Status == "Ativo" ? "text-success" : "text-danger";
                var dotColorClass = colaborador.Status == "Ativo" ? "bg-success" : "bg-danger";

                var nomeDisplay = colaborador.NomeCompleto;
                if (colaborador.NomeCompleto == "Carlos Tavares")
                {
                    nomeDisplay += " (You)";
                }
                <div class="col-12">
                    <div class="card p-3 shadow-sm d-flex flex-row align-items-center">
                        <img src="@colaborador.FotoUrl" class="rounded-circle me-3" width="50" alt="Foto do Colaborador">
                        <div>
                            <h5 class="mb-0">@nomeDisplay</h5>
                            <small class="text-muted">@colaborador.Cargo</small>
                        </div>
                        <div class="ms-auto d-flex align-items-center">
                            <span class="@statusColorClass me-2 fw-bold">@colaborador.Status</span>
                            <span class="dot @dotColorClass"></span>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>