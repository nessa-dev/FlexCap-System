@{
    ViewData["Title"] = "Gestão de Colaboradores (RH)";
    Layout = "~/Views/Shared/Template.cshtml";
}
@model List<FlexCap.Web.Models.Colaborador>

<div class="container-fluid py-4">
    <h2 class="fw-bold mb-4">Colaboradores</h2>

    <div class="row g-2 mb-4 d-flex align-items-end">
        <div class="col-md-2">
            <label for="search-name" class="form-label">Name</label>
            <input type="text" id="search-name" class="form-control" placeholder="Search name">
        </div>
        <div class="col-md-2">
            <label for="status" class="form-label">Status</label>
            <select id="status" class="form-select">
                <option>Active</option>
                <option>Inactive</option>
            </select>
        </div>
        <div class="col-md-2">
            <label for="country" class="form-label">Country</label>
            <select id="country" class="form-select">
                <option>Select country</option>
                <option>Brazil</option>
                <option>United States</option>
                <option>Japan</option>
                <option>Italy</option>
                <option>Canada</option>
            </select>
        </div>
        <div class="col-md-2">
            <label for="sector" class="form-label">Sector</label>
            <select id="sector" class="form-select">
                <option>Select Sector</option>
                <option>Benefits</option>
                <option>Mobility</option>
                <option>Corporate Payments</option>
            </select>
        </div>
        <div class="col-md-2">
            <label for="team" class="form-label">Team</label>
            <select id="team" class="form-select">
                <option>Select Team</option>
                <option>Titans</option>
                <option>Code Warriors</option>
                <option>Bug Busters</option>
            </select>
        </div>
        <div class="col-auto">
            <button class="btn btn-dark btn-sm">
                <span class="material-icons">search</span>
            </button>
        </div>
    </div>

    <!-- Tabela -->
    <div class="table-responsive scrollable-table">
        <table class="table align-middle">
            <thead class="table-light">
                <tr>
                    <th>Photo</th>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Country</th>
                    <th>Current Status</th>
                    <th>Sector</th>
                    <th>Team</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var colaborador in Model)
                    {
                        <tr>
                            <td><img src="@colaborador.FotoUrl" class="rounded-circle" width="50"></td>
                            <td><strong>@colaborador.NomeCompleto</strong></td>
                            <td>@colaborador.Cargo</td>
                            <td>@colaborador.Pais</td>
                            <td>@colaborador.Status</td>
                            <td>@colaborador.Setor</td>
                            <td>@colaborador.Time</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
