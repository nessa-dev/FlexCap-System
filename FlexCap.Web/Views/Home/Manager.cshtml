@{
    ViewData["Title"] = "Home Manager";
    Layout = "~/Views/Shared/Template.cshtml";
}

<div class="container py-4">

    <h1 class="fw-bold mb-4">Welcome, @ViewData["FirstName"]!</h1>
    <div class="row g-4 mb-4">




        <div class="col-12 col-md-6">
            <div class="card shadow-sm card-altura">
                <div class="card-body">
                    <h3 class="card-title texto-flexcap fw-bold mb-3">Team Overview</h3>
                    <div class="d-flex align-items-center">
                        <div class="d-flex flex-column rounded shadow-sm overflow-hidden me-3" style="width: 200px; height: 150px;">
                            <div class="d-flex justify-content-center align-items-center text-white" ; style="height: 55%; background-color: #001637;">
                                <h5 class="fw-bold mb-0">@ViewData["UserTeam"]</h5>
                            </div>
                            <div class="d-flex justify-content-center align-items-center bg-white" style="height: 40%;">
                                <i class="bi bi-check-lg" style="font-size: 3.0rem; color: #001637;"></i>
                            </div>
                        </div>
                        <div class="d-flex flex-column justify-content-center p-3 rounded shadow-sm border" style="height: 100px; flex-grow: 1;">
                            <p class="mb-2">@ViewData["ActiveMembers"] Active Members</p>
                            <p class="mb-0">1 Sprint in Progress</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>





        <div class="col-12 col-md-6">
            <div class="card shadow-sm card-altura">
                <div class="card-body">
                    <h3 class="card-title texto-flexcap fw-bold mb-4">Upcoming Sprint</h3>
                    <div class="mb-3">
                        <div class="progress" role="progressbar" aria-label="Upcoming Sprint Progress" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="height: 50px; background-color: #e9ecef;">
                            <div class="progress-bar bg-primary text-white d-flex align-items-center justify-content-center" style="width: 30%;">
                                <p class="mb-0  fs-6">June 1-25</p>
                            </div>
                        </div>
                        <p class="mt-2 mb-0 fs-5">Progress: 30%</p>
                    </div>
                    <div class="alert alert-warning d-flex align-items-center p-2 mt-2" role="alert">
                        <i class="bi bi-fire me-2" style="font-size: 1.5rem; color: #dc3545;"></i>
                        <p class="mb-0">Heads up! 30% of the team will be out June 10-12 due to holidays.</p>
                    </div>
            </div>
        </div>
    </div>





    <div class="row g-4">

        <div class="col-12 col-md-6">
            <div class="card shadow-sm card-altura">
                <div class="card-body">
                    <h3 class="card-title texto-flexcap fw-bold">Pending Requests</h3>
                </div>
            </div>
        </div>











        <div class="col-12 col-md-6">
            <div class="card shadow-sm card-altura">
                <div class="card-body">
                    <h3 class="card-title texto-flexcap fw-bold">This Week</h3>
                </div>
            </div>
        </div>

    </div>

</div>