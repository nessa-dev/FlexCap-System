@{
    ViewData["Title"] = "Submit Request";
    Layout = "~/Views/Shared/Template.cshtml";
}

<div class="container-geral">
    <div class="container py-4" style="max-width: 700px;">
        <h1 class="fw-bold mb-4">Submit Request</h1>
        <div class="mb-3">
            <input type="text" class="form-control" placeholder="Subject" aria-label="Subject">
        </div>

        <div class="d-flex flex-wrap gap-2 mb-3">
            <div class="flex-grow-1">
                <select class="form-select" aria-label="Type">
                    <option selected>Type</option>
                    <option value="1">Vacation</option>
                    <option value="2">Day Off</option>
                    <option value="3">Personal License</option>
                </select>
            </div>
            <div class="flex-grow-1">
                <input type="text" class="form-control" placeholder="DD/MM/YYYY" aria-label="Data Início">
            </div>
            <div class="flex-grow-1">
                <input type="text" class="form-control" placeholder="DD/MM/YYYY" aria-label="Data Fim">
            </div>
        </div>

        <div class="mb-3">
            <textarea class="form-control" placeholder="Description" rows="4" aria-label="Description"></textarea>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">Send Request</button>
        </div>
    </div>
</div>
