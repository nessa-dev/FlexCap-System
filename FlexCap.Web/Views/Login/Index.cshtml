@model FlexCap.Web.Models.Login.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null; // Tela sem o layout padrão
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Tela de Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Link CSS personalizado -->
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="login-container">
        <!-- Painel esquerdo -->
        <div class="left-panel">
            <h2>WELCOME!</h2>
            <form asp-action="Login" method="post" class="w-100" style="max-width: 300px;">
                @Html.AntiForgeryToken()

                <!-- Campo Email -->
                <input asp-for="Email" class="form-control mb-2" placeholder="E-mail" />
                <span class="text-danger" asp-validation-for="Email"></span>

                <!-- Campo Senha -->
                <input asp-for="Senha" class="form-control mb-2" type="password" placeholder="Password" />
                <span class="text-danger" asp-validation-for="Senha"></span>

                <button type="submit" class="btn btn-submit w-100 mt-3">SUBMIT</button>

                <div class="text-center my-3">
                    <a href="#" class="text-light">Forgot your password?</a>
                </div>

                <hr class="text-light" />

                <div class="text-center">
                    <a href="#" class="btn-outline">Create account</a>
                </div>
            </form>

            <div class="logo mt-4">Flex<span>X</span>Cap</div>
        </div>

        <!-- Painel direito -->
        <div class="right-panel">
            <img src="~/img/login.png" alt="Login Illustration" style="width: 700px; height: auto;"/>
        </div>
    </div>

    <!-- Scripts para validação automática -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
